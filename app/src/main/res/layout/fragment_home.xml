<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   tools:context=".ui.pages.home.HomeFragment">

   <androidx.core.widget.NestedScrollView
      android:layout_width="0dp"
      android:layout_height="match_parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">


         <LinearLayout
            android:id="@+id/layout_top_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/right_guideline1"
            app:layout_constraintStart_toStartOf="@id/left_guideline1"
            app:layout_constraintTop_toBottomOf="@id/top_guideline">

            <TextView
               android:id="@+id/home_txt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:lineSpacingExtra="4sp"
               android:text="Home"
               android:textColor="@color/blackGreen"
               android:textSize="25sp"
               android:textStyle="bold" />

            <ImageView
               android:id="@+id/search_img"
               android:layout_width="40dp"
               android:layout_height="30dp"
               android:adjustViewBounds="true"
               android:maxWidth="42dp"
               android:maxHeight="42dp"
               android:scaleType="fitCenter"
               android:src="@drawable/baseline_search_24"
               app:tint="@color/blackGreen" />


         </LinearLayout>

         <TextView
            android:id="@+id/what_like_to_eat_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="What would you like to eat?"
            android:textColor="@color/blackGreen"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/left_guideline1"
            app:layout_constraintTop_toBottomOf="@id/layout_top_home" />

         <androidx.cardview.widget.CardView
            android:id="@+id/cardView_img"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:elevation="12dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            app:cardCornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="@+id/right_guideline1"
            app:layout_constraintStart_toStartOf="@id/left_guideline1"
            app:layout_constraintTop_toBottomOf="@+id/what_like_to_eat_txt">

            <ImageView
               android:id="@+id/card_img"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:scaleType="centerCrop"
               android:contentDescription="TODO"
               android:src="@color/blackGreen" />


         </androidx.cardview.widget.CardView>

         <TextView
            android:id="@+id/over_popular_items_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Over popular items"
            android:textColor="@color/blackGreen"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/left_guideline1"
            app:layout_constraintTop_toBottomOf="@id/cardView_img" />

         <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/popular_item_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:listitem="@layout/over_row"
            tools:itemCount="2"
            app:layout_constraintEnd_toEndOf="@id/right_guideline1"
            app:layout_constraintStart_toStartOf="@id/left_guideline1"
            app:layout_constraintTop_toBottomOf="@id/over_popular_items_txt" />

         <TextView
            android:id="@+id/categories_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Categories"
            android:textColor="@color/blackGreen"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/left_guideline1"
            app:layout_constraintTop_toBottomOf="@id/popular_item_rv" />

         <androidx.cardview.widget.CardView
            android:id="@+id/categories_cardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:elevation="12dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:layout_marginBottom="?actionBarSize"
            android:thicknessRatio="1.9"
            app:cardCornerRadius="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/right_guideline1"
            app:layout_constraintStart_toStartOf="@id/left_guideline1"
            app:layout_constraintTop_toBottomOf="@id/categories_txt">


            <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/categories_rv"
               android:layout_width="match_parent"
               android:layout_height="match_parent" />

         </androidx.cardview.widget.CardView>


         <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.03" />

         <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

         <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

      </androidx.constraintlayout.widget.ConstraintLayout>

   </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
