<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:id="@+id/main"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   tools:context=".ui.pages.details.MealDetailsActivity">

   <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/appBarLayout"
      android:layout_width="match_parent"
      android:layout_height="200dp">

      <com.google.android.material.appbar.CollapsingToolbarLayout
         android:id="@+id/collapsing_toolbar_layout"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         app:collapsedTitleTextColor="@color/white"
         app:contentScrim="@color/blackGreen"
         app:expandedTitleTextColor="@color/white"
         app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
         >

         <ImageView
            android:id="@+id/meal_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

         <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize" />


      </com.google.android.material.appbar.CollapsingToolbarLayout>


   </com.google.android.material.appbar.AppBarLayout>

   <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fillViewport="true"
      app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

      <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">


         <LinearLayout
            android:id="@+id/info_layout_linear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/right_guideline1"
            app:layout_constraintStart_toStartOf="@id/left_guideline1"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
               android:id="@+id/category_txt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:drawableStart="@drawable/baseline_category_24"
               android:drawablePadding="5dp"
               android:text="Category: Name"
               android:textColor="@color/blackGreen"
               android:textSize="16sp" />

            <TextView
               android:id="@+id/location_txt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:drawableStart="@drawable/baseline_location_pin_24"
               android:drawablePadding="5dp"
               android:text="Location: Name"
               android:textColor="@color/blackGreen"
               android:textSize="16sp" />

         </LinearLayout>

         <TextView
            android:id="@+id/instructions_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="- Instructions"
            android:textColor="@color/blackGreen"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/left_guideline1"
            app:layout_constraintTop_toBottomOf="@id/info_layout_linear" />

         <TextView
            android:id="@+id/instructions_descrip_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="- instructions_descrip_txt"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@id/right_guideline1"
            app:layout_constraintStart_toStartOf="@id/left_guideline1"
            app:layout_constraintTop_toBottomOf="@id/instructions_txt" />


         <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

         <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />
      </androidx.constraintlayout.widget.ConstraintLayout>


   </androidx.core.widget.NestedScrollView>

   <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/fab"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:backgroundTint="@color/red"
      android:src="@drawable/baseline_favorite_border_24"
      app:layout_anchor="@id/appBarLayout"
      app:layout_anchorGravity="bottom|end"
      android:layout_marginEnd="5dp"
      app:tint="@color/white" />

   <ImageView
      android:id="@+id/video_img"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|center"
      android:layout_marginBottom="5dp"
      android:src="@drawable/baseline_ondemand_video_24"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
